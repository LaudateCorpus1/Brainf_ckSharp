{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "backgroundImage": "{{{Background}}}",
  "body": [
    {
      "type": "Container",
      "seperation": "None",
      "items": [
        {
          "type": "TextBlock",
          "text": "{{{Title}}}",
          "weight": "bolder",
          "size": "large",
          "wrap": true,
          "maxLines": 3
        },
        {
          "type": "TextBlock",
          "text": "{{{Preview}}}",
          "size": "default",
          "wrap": true,
          "maxLines": 6
        }
      ]
    }
  ]
}