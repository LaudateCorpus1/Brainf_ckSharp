<UserControl
    x:Class="Brainf_ckSharp.Uwp.Controls.Host.InputPanel.VirtualKeyboard.OperatorsKeyboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:virtualKeyboard1="using:Brainf_ckSharp.Uwp.Controls.Host.InputPanel.VirtualKeyboard"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <!--Operators pad-->
    <Grid
        x:Name="RootGrid"
        Padding="4"
        RowSpacing="4"
        ColumnSpacing="4">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition x:Name="PBrainColumn" Width="*"/>
        </Grid.ColumnDefinitions>

        <!--Visual states-->
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="MinimalState">
                    <VisualState.Setters>
                        <Setter Target="RootGrid.Padding" Value="4,4,0,4"/>
                        <Setter Target="PBrainColumn.Width" Value="0"/>
                        <Setter Target="PBrainGrid.Visibility" Value="Collapsed"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="ExtendedState">
                    <VisualState.Setters>
                        <Setter Target="RootGrid.Padding" Value="4"/>
                        <Setter Target="PBrainColumn.Width" Value="*"/>
                        <Setter Target="PBrainGrid.Visibility" Value="Visible"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <!--First row (><+-)-->
        <virtualKeyboard1:OperatorButton
            Operator="{StaticResource ForwardPtr}"
            Description="++ptr"
            Click="OperatorButton_OnClick"/>
        <virtualKeyboard1:OperatorButton
            Operator="{StaticResource BackwardPtr}"
            Description="--ptr"
            Grid.Row="0"
            Grid.Column="1"
            Click="OperatorButton_OnClick"/>
        <virtualKeyboard1:OperatorButton
            Operator="{StaticResource Plus}"
            Description="(*ptr)++"
            Grid.Row="0"
            Grid.Column="2"
            Click="OperatorButton_OnClick"/>
        <virtualKeyboard1:OperatorButton
            Operator="{StaticResource Minus}"
            Description="(*ptr)--"
            Grid.Row="0"
            Grid.Column="3"
            Click="OperatorButton_OnClick"/>

        <!--Second row ([].,)-->
        <virtualKeyboard1:OperatorButton
            Operator="{StaticResource LoopStart}"
            Description="while (*ptr) {"
            Grid.Row="1"
            Grid.Column="0"
            Click="OperatorButton_OnClick"/>
        <virtualKeyboard1:OperatorButton
            Operator="{StaticResource LoopEnd}"
            Description="}"
            Grid.Row="1"
            Grid.Column="1"
            Click="OperatorButton_OnClick"/>
        <virtualKeyboard1:OperatorButton
            Operator="{StaticResource PrintChar}"
            Description="putchar(*ptr)"
            Grid.Row="1"
            Grid.Column="2"
            Click="OperatorButton_OnClick"/>
        <virtualKeyboard1:OperatorButton
            Operator="{StaticResource ReadChar}"
            Description="*ptr = getchar()"
            Grid.Row="1"
            Grid.Column="3"
            Click="OperatorButton_OnClick"/>

        <!--Border with the PBrain operators-->
        <Grid
            x:Name="PBrainGrid"
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="4"
            RowSpacing="4"
            ColumnSpacing="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <virtualKeyboard1:OperatorButton
                Operator="{StaticResource FunctionStart}"
                Description="f ("
                Click="OperatorButton_OnClick"/>
            <virtualKeyboard1:OperatorButton
                Operator="{StaticResource FunctionEnd}"
                Description=")"
                Grid.Row="0"
                Grid.Column="1"
                Click="OperatorButton_OnClick"/>
            <virtualKeyboard1:OperatorButton
                Operator="{StaticResource FunctionCall}"
                Description="call"
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Click="OperatorButton_OnClick"/>
        </Grid>
    </Grid>
</UserControl>
