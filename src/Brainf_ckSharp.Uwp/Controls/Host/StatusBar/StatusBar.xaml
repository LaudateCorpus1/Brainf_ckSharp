<UserControl
    x:Class="Brainf_ckSharp.Uwp.Controls.Host.StatusBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="48"
    d:DesignWidth="400">


    <Grid
        x:Name="RootGrid"
        Background="{StaticResource SystemControlHighlightAccentBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/> <!--State-->
            <ColumnDefinition Width="Auto"/> <!--Error-->
            <ColumnDefinition Width="Auto"/> <!--Operators-->
        </Grid.ColumnDefinitions>

        <!--Visual states-->
        <VisualStateManager.VisualStateGroups>

            <!--General UI states-->
            <VisualStateGroup>
                <VisualState x:Name="ConsoleState">
                    <VisualState.Setters>
                        <Setter 
                            Target="RootGrid.Background"
                            Value="{StaticResource SystemControlHighlightAccentBrush}"/>
                        <Setter
                            Target="ErrorBlock.Visibility"
                            Value="Collapsed"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="ConsoleErrorState">
                    <VisualState.Setters>
                        <Setter 
                            Target="RootGrid.Background"
                            Value="#FFCA5100"/>
                        <Setter
                            Target="ErrorBlock.Visibility"
                            Value="Visible"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <!--State info-->
        <TextBlock
            x:Name="InfoBlock"
            Text="Ready"
            Foreground="White"
            Margin="8,0,8,0"
            FontSize="12"
            FontWeight="Normal"
            VerticalAlignment="Center"
            TextTrimming="CharacterEllipsis"/>

        <!--Error-->
        <TextBlock 
            x:Name="ErrorBlock"
            Foreground="White"
            Margin="8,0,8,0"
            FontSize="12"
            VerticalAlignment="Center"
            IsTextScaleFactorEnabled="False"
            FontWeight="Normal"
            Grid.Column="1">
            <Run Text="Error:"/>
            <Run 
                Text="0"
                x:Name="ErrorRun"/>
        </TextBlock>

        <!--Operators-->
        <TextBlock 
            x:Name="OpsBlock"
            Foreground="White"
            Margin="8,0,8,0"
            FontSize="12"
            VerticalAlignment="Center"
            IsTextScaleFactorEnabled="False"
            FontWeight="Normal"
            Grid.Column="2">
            <Run Text="Char:"/>
            <Run 
                Text="0"
                x:Name="OpsRun"/>
        </TextBlock>
    </Grid>
</UserControl>
