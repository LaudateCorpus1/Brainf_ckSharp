<UserControl
    x:Class="Brainf_ckSharp.UWP.Controls.DataTemplates.GitHub.DeveloperTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:animations="using:Microsoft.Toolkit.Uwp.UI.Animations"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <UserControl.Resources>

        <!--Thumbnail animations-->
        <Storyboard x:Name="StoryboardZoomIn">
            <DoubleAnimation 
                EnableDependentAnimation="True"
                Storyboard.TargetProperty="ScaleX"
                Storyboard.TargetName="RootTransform"
                Duration="0:0:0.4" To="1.02">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation 
                EnableDependentAnimation="True"
                Storyboard.TargetProperty="ScaleY"
                Storyboard.TargetName="RootTransform"
                Duration="0:0:0.4" To="1.02">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation 
                EnableDependentAnimation="True"
                Storyboard.TargetProperty="ScaleX"
                Storyboard.TargetName="ImageTransform"
                Duration="0:0:0.4" To="1.1">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation 
                EnableDependentAnimation="True"
                Storyboard.TargetProperty="ScaleY"
                Storyboard.TargetName="ImageTransform"
                Duration="0:0:0.4" To="1.1">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation
                EnableDependentAnimation="True"
                Storyboard.TargetProperty="ShadowOpacity"
                Storyboard.TargetName="ShadowPanel"
                Duration="0:0:0.4" To="1"/>
            <DoubleAnimation
                EnableDependentAnimation="True"
                Storyboard.TargetProperty="X"
                Storyboard.TargetName="TextTransform"
                Duration="0:0:0.4" To="4">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Name="StoryboardZoomOut">
            <DoubleAnimation 
                EnableDependentAnimation="True"
                Storyboard.TargetProperty="ScaleX"
                Storyboard.TargetName="RootTransform"
                Duration="0:0:0.4" To="1">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation 
                EnableDependentAnimation="True"
                Storyboard.TargetProperty="ScaleY"
                Storyboard.TargetName="RootTransform"
                Duration="0:0:0.4" To="1">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation 
                EnableDependentAnimation="True"
                Storyboard.TargetProperty="ScaleX"
                Storyboard.TargetName="ImageTransform"
                Duration="0:0:0.4" To="1">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation 
                EnableDependentAnimation="True"
                Storyboard.TargetProperty="ScaleY"
                Storyboard.TargetName="ImageTransform"
                Duration="0:0:0.4" To="1">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation
                EnableDependentAnimation="True"
                Storyboard.TargetProperty="ShadowOpacity"
                Storyboard.TargetName="ShadowPanel"
                Duration="0:0:0.4" To="0"/>
            <DoubleAnimation
                EnableDependentAnimation="True"
                Storyboard.TargetProperty="X"
                Storyboard.TargetName="TextTransform"
                Duration="0:0:0.4" To="0">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </UserControl.Resources>

    <!--Root-->
    <controls:DropShadowPanel
        Height="80"
        x:Name="ShadowPanel"
        Color="{ThemeResource ThemeShadowColor}" ShadowOpacity="0"
        BlurRadius="8" OffsetY="4"
        HorizontalContentAlignment="Stretch"
        RenderTransformOrigin="0.5, 0.5">
        <controls:DropShadowPanel.RenderTransform>
            <ScaleTransform x:Name="RootTransform"/>
        </controls:DropShadowPanel.RenderTransform>
        <Button
            Background="{ThemeResource GitHubContributorBackgroundBrush}"
            Click="Contributor_Clicked">
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!--Image grid-->
                <Grid Margin="12,0,12,0" Padding="8">

                    <!--Progress ring-->
                    <ProgressRing
                        x:Name="LoadingRing"
                        HorizontalAlignment="Center" VerticalAlignment="Center"
                        Foreground="{ThemeResource SystemControlBackgroundAccentBrush}"
                        IsActive="True">
                        <animations:Implicit.HideAnimations>
                            <animations:OpacityAnimation Duration="0:0:1" To="0"/>
                        </animations:Implicit.HideAnimations>
                    </ProgressRing>

                    <!--Image-->
                    <controls:ImageEx
                        Height="56" Width="56"
                        VerticalAlignment="Center" HorizontalAlignment="Center"
                        IsCacheEnabled="True"
                        Source="{x:Bind ViewModel.ProfileImageUrl}"
                        Stretch="UniformToFill"
                        ImageExOpened="ImageExBase_OnImageExOpened"
                        RenderTransformOrigin="0.5, 0.5"
                        CornerRadius="9999">
                        <controls:ImageEx.RenderTransform>
                            <ScaleTransform x:Name="ImageTransform"/>
                        </controls:ImageEx.RenderTransform>
                    </controls:ImageEx>
                </Grid>

                <!--Info-->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <StackPanel.RenderTransform>
                        <TranslateTransform x:Name="TextTransform"/>
                    </StackPanel.RenderTransform>

                    <!--Name-->
                    <TextBlock
                        Text="{x:Bind ViewModel.Name}"
                        FontSize="16" FontWeight="SemiBold"/>

                    <!--Bio-->
                    <TextBlock
                        Text="{x:Bind ViewModel.Bio}"
                        FontSize="13" Foreground="{ThemeResource WidgetHeaderForeground}"
                        TextWrapping="WrapWholeWords" MaxLines="2" TextTrimming="CharacterEllipsis"
                        Margin="0,0,4,0"/>
                </StackPanel>
            </Grid>
        </Button>
    </controls:DropShadowPanel>
</UserControl>
