<UserControl
    x:Class="Brainf_ck_sharp_UWP.UserControls.Flyouts.SnippetsMenu.TouchCodeSnippetsBrowserList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:snippetsMenu="using:Brainf_ck_sharp_UWP.UserControls.DataTemplates.SnippetsMenu"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <ListView
        ItemsSource="{x:Bind ViewModel.CodeSnippets, Mode=OneWay}"
        ItemContainerStyle="{StaticResource ListViewItemWithoutBackgroundVisualStates}"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        IsItemClickEnabled="True"
        ItemClick="ListViewBase_OnItemClick">
        <ListView.ItemTemplate>
            <DataTemplate>
                <snippetsMenu:CodeSnippetTemplate/>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</UserControl>
