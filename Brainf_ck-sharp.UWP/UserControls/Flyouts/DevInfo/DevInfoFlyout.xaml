    </UserControl.Resources>

    <StackPanel>

        <!--General info-->
        <TextBlock
            Margin="12,12,16,0"
            TextWrapping="Wrap"
            FontWeight="SemiLight"
            IsTextScaleFactorEnabled="False">
            <Run 
                Text="Developed by"
                x:Uid="DevelopedByRun"/>
            <Run 
                Text="Sergio Pedri"
                FontWeight="SemiBold"/><Run Text="."/>
            <LineBreak/>
            <Run 
                FontSize="14"
                Text="Thanks to Andrea Salvati for his help with the original interpreter algorithm, Camil Demetrescu for the idea to port Brainf*ck# to Windows 10 and Christopher Blackman for his help during the app development"
                x:Uid="DevelopedByPart2Run"/>
        </TextBlock>

        <!--Main buttons-->
        <Grid 
            Margin="12,12,16,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--Rate in the Store button-->
            <Button
                Height="40"
                Style="{StaticResource WideButtonWithNoBackgroundAndPointerBrushStyle}"
                Background="{ThemeResource SystemControlHighlightAccentBrush}"
                MaxWidth="220"
                HorizontalAlignment="Left"
                Click="RateStoreButton_Click">
                <Grid Margin="12,0,12,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <iconBoxToolkit:IconBox 
                        Data="{StaticResource StoreLogo}"
                        Margin="4"/>
                    <TextBlock
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Margin="16,0,0,0"
                        Text="Rate in the Store"
                        x:Uid="RateStoreBlock"
                        IsTextScaleFactorEnabled="False"
                        TextWrapping="NoWrap"
                        TextTrimming="CharacterEllipsis"
                        FontSize="15"
                        FontWeight="Normal"/>
                </Grid>
            </Button>
            
            <!--Donate button-->
            <Button 
                Margin="20,0,0,0"
                HorizontalAlignment="Left"
                MaxWidth="220"
                Height="40"
                Style="{StaticResource WideButtonWithNoBackgroundAndPointerBrushStyle}"
                Background="{ThemeResource SystemControlHighlightListAccentLowBrush}"
                Grid.Column="1"
                Click="DonateButton_Click">
                <Grid Margin="12,0,12,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Text="&#xE0A5;"
                        Style="{StaticResource FontIconTextBlockStyle}"
                        VerticalAlignment="Center"/>
                    <TextBlock
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        IsTextScaleFactorEnabled="False"
                        TextWrapping="NoWrap"
                        TextTrimming="CharacterEllipsis"
                        Margin="16,0,0,0"
                        Text="Donate"
                        x:Uid="DonateButton"
                        FontSize="15"
                        FontWeight="Normal"/>
                </Grid>
            </Button>
        </Grid>
        
        <!--Contacts-->
        <Grid 
            Background="#20000000"
            Margin="0,12,0,0">
            <StackPanel Margin="12,12,0,0">
                <TextBlock
                    Text="Contacts"
                    x:Uid="ContactsBlock"
                    FontSize="16"
                    FontWeight="Normal"/>

                <!--Email button-->
                <Button
                    Margin="0,16,0,0"
                    Height="40"
                    Style="{StaticResource WideButtonWithNoBackgroundAndPointerBrushStyle}"
                    Background="{ThemeResource SystemControlHighlightAccentBrush}"
                    MaxWidth="220"
                    HorizontalAlignment="Left"
                    Click="SendEmailButton_Click">
                    <Grid Margin="12,0,12,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Text="&#xE166;"
                            Style="{StaticResource FontIconTextBlockStyle}"
                            VerticalAlignment="Center"/>
                        <TextBlock
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Margin="16,0,0,0"
                            Text="Send feedback"
                            x:Uid="SendFeedbackBlock"
                            IsTextScaleFactorEnabled="False"
                            TextWrapping="NoWrap"
                            TextTrimming="CharacterEllipsis"
                            FontSize="15"
                            FontWeight="Normal"/>
                    </Grid>
                </Button>

                <!--Twitter button-->
                <Button
                    Margin="0,16,0,16"
                    Height="40"
                    Style="{StaticResource WideButtonWithNoBackgroundAndPointerBrushStyle}"
                    Background="#FF1DA1F2"
                    MaxWidth="220"
                    HorizontalAlignment="Left"
                    Click="TwitterButton_Click">
                    <Grid Margin="12,0,12,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Image
                            Source="/Assets/Misc/Twitter.png"
                            Height="20"/>
                        <TextBlock
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            IsTextScaleFactorEnabled="False"
                            TextWrapping="NoWrap"
                            TextTrimming="CharacterEllipsis"
                            Margin="16,0,0,0"
                            Text="@SergioPedri"
                            FontSize="15"
                            FontWeight="Normal"/>
                    </Grid>
                </Button>
            </StackPanel>
        </Grid>

        <!--Version info-->
        <Grid 
            Background="#20000000"
            Margin="0,8,0,0">
            <StackPanel Margin="12,12,0,0">
                <TextBlock
                    Text="Release notes"
                    x:Uid="ReleaseNotesBlock"
                    FontSize="16"
                    FontWeight="Normal"/>

                <!--Changelog button-->
                <Button
                    Margin="0,16,0,0"
                    Height="40"
                    Style="{StaticResource WideButtonWithNoBackgroundAndPointerBrushStyle}"
                    Background="{ThemeResource SystemControlHighlightAccentBrush}"
                    MaxWidth="220"
                    HorizontalAlignment="Left"
                    Click="ShowChangelogButton_Click">
                    <Grid Margin="12,0,12,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Text="&#xEA8D;"
                            Style="{StaticResource FontIconTextBlockStyle}"
                            VerticalAlignment="Center"/>
                        <TextBlock
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Margin="16,0,0,0"
                            Text="Changelog"
                            x:Uid="ChangelogBlock"
                            IsTextScaleFactorEnabled="False"
                            TextWrapping="NoWrap"
                            TextTrimming="CharacterEllipsis"
                            FontSize="15"
                            FontWeight="Normal"/>
                    </Grid>
                </Button>

                <!--Build version-->
                <Grid VerticalAlignment="Top"
                      Margin="0,16,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock TextWrapping="Wrap"
                               FontWeight="SemiLight"
                               Text="&#xE98F;"
                               FontFamily="Segoe MDL2 Assets"
                               Foreground="{StaticResource AccentBrushLowFade}"
                               FontSize="{StaticResource FontIconTextBlockSize}"
                               Margin="0,3,0,0"/>
                    <TextBlock Foreground="#FFF0F0F0"
                               TextWrapping="Wrap"
                               FontWeight="SemiLight"
                               Grid.Column="1"
                               Margin="4,0,0,0">
                        <Run Text="Build version"
                             FontSize="14"
                             x:Uid="AppBuildNumber"/><Run Text=":" FontSize="14"/>
                        <Run x:Name="BuildRun"
                             Text="2017.102.26.0"
                             FontSize="15"
                             FontWeight="SemiBold"
                             Foreground="#FFE0E0E0"/>
                    </TextBlock>
                </Grid>
            </StackPanel>
        </Grid>
    </StackPanel>
</UserControl>
