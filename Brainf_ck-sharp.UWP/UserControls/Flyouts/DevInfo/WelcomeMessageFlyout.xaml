<UserControl
    x:Class="Brainf_ck_sharp_UWP.UserControls.Flyouts.DevInfo.WelcomeMessageFlyout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="480">

    <!--Root-->
    <StackPanel>

        <!--Greetings-->
        <TextBlock 
            FontSize="14"
            TextWrapping="WrapWholeWords">
            <Run 
                Text="Thank you for downloading the app, I hope you'll enjoy using it!"
                x:Uid="WelcomePart1"/>
            <LineBreak/>
            <Run 
                Text="Please feel free to send me an email if you have suggestions or feedback, or if you found a bug, and I'll be happy to help."
                x:Uid="WelcomePart2"/>
            <LineBreak/>
            <LineBreak/><Run 
                Text="Before jumping straight into the app, it might be a good idea to read the user guide to make sure you remember all there is to know about the language!"
                x:Uid="WelcomePart4"/>
        </TextBlock>
    </StackPanel>
</UserControl>
