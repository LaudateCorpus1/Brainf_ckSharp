<UserControl
    x:Class="Brainf_ck_sharp_UWP.UserControls.VirtualKeyboard.VirtualArrowsKeyboardControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xaml="using:Microsoft.Graphics.Canvas.UI.Xaml"
    xmlns:controls="using:Brainf_ck_sharp_UWP.UserControls.VirtualKeyboard.Controls"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <!--Root-->
    <Grid
        Background="Transparent"
        BorderThickness="1"
        BorderBrush="#FF404040">
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="48"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="48"/>
            <ColumnDefinition Width="48"/>
            <ColumnDefinition Width="48"/>
        </Grid.ColumnDefinitions>
        
        <!--Effect border-->
        <Border
            Grid.RowSpan="2"
            Grid.ColumnSpan="3"
            x:Name="EffectBorder"/>
        <xaml:CanvasControl 
            Grid.Row="0"
            Grid.Column="0"
            Opacity="0"
            x:Name="Win2DCanvas"/>
        
        <!--Up-->
        <controls:VirtualArrowKeyboardButton
            Icon="&#xE010;"
            Grid.Row="0"
            Grid.Column="1"
            Click="{x:Bind SendKeyUpMessage}"
            Height="50"
            Margin="0,-1,0,0"/>
        
        <!--Left-->
        <controls:VirtualArrowKeyboardButton
            Icon="&#xE00E;"
            Grid.Row="1"
            Grid.Column="0"
            Click="{x:Bind SendKeyLeftMessage}"
            Width="50"
            Margin="-1,0,-1,0"/>
        
        <!--Down-->
        <controls:VirtualArrowKeyboardButton
            Icon="&#xE011;"
            Grid.Row="1"
            Grid.Column="1"
            Click="{x:Bind SendKeyDownMessage}"
            Width="49"
            Margin="0,0,-1,0"/>
        
        <!--Right-->
        <controls:VirtualArrowKeyboardButton
            Icon="&#xE00F;"
            Grid.Row="1"
            Grid.Column="2"
            Click="{x:Bind SendKeyRightMessage}"
            Width="49"/>
    </Grid>
</UserControl>
