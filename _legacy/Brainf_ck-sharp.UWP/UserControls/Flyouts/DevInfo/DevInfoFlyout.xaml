    <StackPanel>

        <!--General info-->
        <TextBlock
            Margin="12,12,16,0"
            TextWrapping="Wrap"
            IsTextScaleFactorEnabled="False">
            <Run 
                Text="Developed by"
                x:Uid="DevelopedByRun"/>
            <Run 
                Text="Sergio Pedri"
                FontWeight="SemiBold"/><Run Text="."/>
            <LineBreak/>
            <Run 
                FontSize="14"
                Text="Thanks to Andrea Salvati for his help with the original interpreter algorithm, Camil Demetrescu for the idea to port Brainf*ck# to Windows 10 and Christopher Blackman for his help during the app development."
                x:Uid="DevelopedByPart2Run"/>
        </TextBlock>

        <!--Rate in the Store button-->
        <Button
            Margin="12,16,16,0"
            Height="40"
            Style="{StaticResource WideButtonWithNoBackgroundAndPointerBrushStyle}"
            Background="{ThemeResource SystemControlHighlightAccentBrush}"
            MaxWidth="220"
            HorizontalAlignment="Left"
            Click="RateStoreButton_Click">
            <inheritedControls:LightBorderAndBackgroundOverlay
                Margin="-2"
                LightBorderThickness="2"
                LightBorderBrush="{StaticResource BorderLightBrush}"
                LightBackgroundBrush="{StaticResource ElementsWideLightBrush}">
                <Grid Margin="12,0,12,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <controls:IconBox 
                        Data="{StaticResource StoreLogo}"
                        Margin="0,8,8,8"/>
                    <TextBlock
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Margin="8,0,0,0"
                        Text="Rate in the Store"
                        x:Uid="RateStoreBlock"
                        IsTextScaleFactorEnabled="False"
                        TextWrapping="NoWrap"
                        TextTrimming="CharacterEllipsis"
                        FontSize="15"
                        FontWeight="Normal"/>
                </Grid>
            </inheritedControls:LightBorderAndBackgroundOverlay>
        </Button>

        <!--Contacts-->
        <Grid 
            Background="#20000000"
            Margin="0,12,0,0">
            <StackPanel Margin="12,12,16,12">
                <TextBlock
                    Text="Contacts"
                    x:Uid="ContactsBlock"
                    FontSize="16"
                    FontWeight="Normal"/>

                <!--Email and Twitter buttons-->
                <Grid 
                    Margin="0,16,0,0"
                    Height="40">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!--Email button-->
                    <customControls:IconButtonWithTextContent
                        BackgroundBrush="{ThemeResource SystemControlHighlightAccentBrush}"
                        MaxWidth="220"
                        Icon="&#xE89C;"
                        Title="Send feedback"
                        x:Uid="SendFeedbackButton"
                        Click="SendEmailButton_Click"/>

                    <!--Twitter button-->
                    <Button
                        Margin="16,0,0,0"
                        Grid.Column="1"
                        Style="{StaticResource WideButtonWithNoBackgroundAndPointerBrushStyle}"
                        Background="#FF1DA1F2"
                        MaxWidth="220"
                        HorizontalAlignment="Left"
                        Click="TwitterButton_Click">
                        <inheritedControls:LightBorderAndBackgroundOverlay
                            Margin="-2"
                            LightBorderThickness="2"
                            LightBorderBrush="{StaticResource BorderLightBrush}"
                            LightBackgroundBrush="{StaticResource ElementsWideLightBrush}">
                            <Grid Margin="12,0,12,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Image
                                    Source="/Assets/Misc/Twitter.png"
                                    Height="16"/>
                                <TextBlock
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    IsTextScaleFactorEnabled="False"
                                    TextWrapping="NoWrap"
                                    TextTrimming="CharacterEllipsis"
                                    Margin="12,0,0,0"
                                    Text="@SergioPedri"
                                    FontSize="15"
                                    FontWeight="Normal"/>
                            </Grid>
                        </inheritedControls:LightBorderAndBackgroundOverlay>
                    </Button>
                </Grid>
            </StackPanel>
        </Grid>

        <!--Version info-->
        <Grid 
            Background="#20000000"
            Margin="0,8,0,8">
            <StackPanel Margin="12,12,0,0">
                <TextBlock
                    Text="Guides and info"
                    x:Uid="GuidesInfoBlock"
                    FontSize="16"
                    FontWeight="Normal"/>

                <!--Buttons-->
                <Grid
                    Height="40"
                    Margin="0,16,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!--User guide button-->
                    <customControls:IconButtonWithTextContent
                        BackgroundBrush="{ThemeResource SystemControlHighlightListAccentMediumBrush}"
                        MaxWidth="220"
                        Icon="&#xE82D;"
                        Title="User guide"
                        x:Uid="UserGuideButton"
                        Click="UserGuideButton_Click"/>

                    <!--Changelog button-->
                    <customControls:IconButtonWithTextContent
                        Margin="16,0,0,0"
                        Grid.Column="1"
                        BackgroundBrush="{ThemeResource SystemControlHighlightAccentBrush}"
                        MinWidth="140"
                        MaxWidth="220"
                        Icon="&#xEA8D;"
                        Title="Changelog"
                        x:Uid="ChangelogButton"
                        Click="ShowChangelogButton_Click"/>
                </Grid>

                <!--Build version-->
                <Grid VerticalAlignment="Top"
                      Margin="0,16,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock TextWrapping="Wrap"
                               Text="&#xE98F;"
                               FontFamily="Segoe MDL2 Assets"
                               Foreground="{StaticResource AccentBrushLowFade}"
                               FontSize="{StaticResource FontIconTextBlockSize}"
                               Margin="0,1,0,0"/>
                    <TextBlock TextWrapping="Wrap"
                               FontWeight="Normal"
                               Grid.Column="1"
                               Margin="8,0,0,0"
                               x:Name="BuildBlock"
                               Text="2017.102.26.0"
                               FontSize="14"/>
                </Grid>
            </StackPanel>
        </Grid>
    </StackPanel>
</UserControl>
