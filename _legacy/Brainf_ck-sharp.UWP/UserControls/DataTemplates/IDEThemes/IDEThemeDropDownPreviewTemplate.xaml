<UserControl
    x:Class="Brainf_ck_sharp_UWP.UserControls.DataTemplates.IDEThemes.IDEThemeDropDownPreviewTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Brainf_ck_sharp_UWP.UserControls.DataTemplates.IDEThemes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:attachedProperties="using:Brainf_ck_sharp_UWP.AttachedProperties"
    xmlns:converters="using:Brainf_ck_sharp_UWP.Converters"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <UserControl.Resources>
        <converters:BoolToColorBrushConverter x:Key="ColorConverter"/>
    </UserControl.Resources>

    <!--Selectable preview-->
    <Grid>
        <local:IDEThemePreviewTemplate 
            Margin="0,1,0,1"
            x:Name="PreviewTemplate"/>
        <Border BorderBrush="{Binding IsSelected, Converter={StaticResource ColorConverter}, ConverterParameter=#A0FFFFFF_#00000000}"
                BorderThickness="2"/>
        <Polygon attachedProperties:CustomPolygonBorderAngleHelper.CustomPolygonBorderAngle="54"
                 VerticalAlignment="Top"
                 HorizontalAlignment="Right"
                 Margin="2"
                 Fill="{Binding IsSelected, Converter={StaticResource ColorConverter}, ConverterParameter=#A0FFFFFF_#00000000}"/>
    </Grid>
</UserControl>
